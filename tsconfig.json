{
  "compilerOptions": {
    "module": "ES2022",
    "lib": [ "ES2022" ],
    "esModuleInterop": true,
    "moduleResolution": "node",
    "target": "es2020",
    "strict": true,
    "allowJs": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "build/test"
  },
  "include": [
    "./src/**/*.ts",
    "./test/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
