{
  "compilerOptions": {
    "module": "commonjs",
    "lib": ["es2021"],
    "esModuleInterop": true,
    "moduleResolution": "node",
    "target": "es2020",
    "strict": true,
    "allowJs": true,
    "forceConsistentCasingInFileNames": true,
    "declaration": true,
    "declarationMap": true,
    "rootDir": ".",
    "outDir": "build"
  },
  "include": [
    "./src/**/*.ts",
    "./test/**/+.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
